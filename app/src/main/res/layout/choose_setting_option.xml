<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dim_120"
    android:paddingRight="@dimen/dim_10"
    android:paddingTop="@dimen/dim_10">


    <LinearLayout
        android:id="@+id/lnSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginRight="@dimen/dim_10"
        android:background="@color/transparent_color_40"
        android:orientation="vertical"
        android:paddingTop="@dimen/dim_1">


        <LinearLayout
            android:id="@+id/language_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/dim_10">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:src="@drawable/ic_sort_by_alpha_white_24dp" />

            <TextView
                android:id="@+id/txtMyAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:text="@string/language"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_13" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line"></View>


        <LinearLayout
            android:id="@+id/lnHelpCenterClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/dim_10">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:src="@drawable/ic_live_help_white_24dp" />

            <TextView
                android:id="@+id/txtHelpCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:text="@string/help_center"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_13" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
