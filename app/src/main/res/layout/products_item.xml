<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dim_200"
    android:layout_height="@dimen/dim_200"
    android:layout_marginRight="3dp"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="2sp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="@dimen/dim_200"
        android:layout_height="@dimen/dim_200"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/dim_200"
            android:layout_height="@dimen/dim_200"
            android:scaleType="fitXY"
            android:src="@drawable/cotton"></ImageView>

        <RelativeLayout
            android:layout_width="@dimen/dim_200"
            android:layout_height="@dimen/dim_35"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_color_40">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_35"
                android:layout_alignParentLeft="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="name"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_13" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_35"
                android:layout_alignParentRight="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="price"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_13" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
